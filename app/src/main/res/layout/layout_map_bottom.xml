<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/run_background_color"
    android:clipToPadding="true"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/order_icon_time" />

            <TextView
                android:id="@+id/run_map_tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@id/_time"
                android:layout_toRightOf="@id/_time"
                android:text="等待骑手接单"
                android:textColor="@color/font_color_33"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/run_map_tv_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/run_map_tv_status"
                android:layout_alignStart="@id/run_map_tv_status"
                android:layout_alignLeft="@id/run_map_tv_status"
                android:layout_marginTop="10dp"
                android:text="请耐心等待"
                android:textColor="@color/font_color_99"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_right" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="鲜花"
                android:textColor="@color/font_color_33"
                android:textSize="14sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#FFE5E5E5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12kg"
                android:textColor="@color/font_color_33"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#FFE5E5E5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/_qu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/lable_qu" />

            <TextView
                android:id="@+id/run_map_tv_qu_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/_qu"
                android:layout_toRightOf="@id/_qu"
                android:text="济南市高新区汉裕金谷A3-2号楼 1003室"
                android:textColor="@color/font_color_33"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/run_map_tv_qu_contract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/run_map_tv_qu_address"
                android:layout_alignStart="@id/run_map_tv_qu_address"
                android:layout_alignLeft="@id/run_map_tv_qu_address"
                android:layout_marginTop="10dp"
                android:text="苏珊  18855115511"
                android:textColor="@color/font_color_99"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/run_map_tv_qu_contract"
                android:layout_marginStart="46dp"
                android:layout_marginLeft="46dp"
                android:layout_marginTop="20dp"
                android:background="#FFE5E5E5" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/lable_song" />

            <TextView
                android:id="@+id/run_map_tv_song_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/_song"
                android:layout_toRightOf="@id/_song"
                android:text="济南市高新区汉裕金谷A3-2号楼 1003室"
                android:textColor="@color/font_color_33"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/run_map_tv_song_contract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/run_map_tv_song_address"
                android:layout_alignStart="@id/run_map_tv_song_address"
                android:layout_alignLeft="@id/run_map_tv_song_address"
                android:layout_marginTop="10dp"
                android:text="苏珊  18855115511"
                android:textColor="@color/font_color_99"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/run_map_tv_song_contract"
                android:layout_marginStart="46dp"
                android:layout_marginLeft="46dp"
                android:layout_marginTop="20dp"
                android:background="#FFE5E5E5" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout style="@style/run_order_detail_item">

                <TextView
                    style="@style/run_order_detail_tv_title"
                    android:text="骑手信息" />

                <TextView
                    style="@style/run_order_detail_tv_value"
                    android:text="苏珊  18855115511" />
            </LinearLayout>

            <View style="@style/run_order_detail_line" />

            <LinearLayout style="@style/run_order_detail_item">

                <TextView
                    style="@style/run_order_detail_tv_title"
                    android:text="配送距离" />

                <TextView
                    style="@style/run_order_detail_tv_value"
                    android:text="10.1km" />
            </LinearLayout>

            <View style="@style/run_order_detail_line" />

            <LinearLayout style="@style/run_order_detail_item">

                <TextView
                    style="@style/run_order_detail_tv_title"
                    android:text="配送费" />

                <TextView
                    style="@style/run_order_detail_tv_value"
                    android:text="￥8" />
            </LinearLayout>

            <View style="@style/run_order_detail_line" />

            <LinearLayout style="@style/run_order_detail_item">

                <TextView
                    style="@style/run_order_detail_tv_title"
                    android:text="小费" />

                <TextView
                    style="@style/run_order_detail_tv_value"
                    android:text="--" />
            </LinearLayout>

            <View style="@style/run_order_detail_line" />

            <LinearLayout style="@style/run_order_detail_item">

                <TextView
                    style="@style/run_order_detail_tv_title"
                    android:text="总计" />

                <TextView
                    style="@style/run_order_detail_tv_value"
                    android:text="总计" />
            </LinearLayout>

            <View
                style="@style/run_order_detail_line"
                android:layout_height="10dp"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp" />

            <LinearLayout style="@style/run_order_detail_item">

                <TextView
                    style="@style/run_order_detail_tv_title"
                    android:text="订单号" />

                <TextView
                    style="@style/run_order_detail_tv_value"
                    android:text="5647 7654 4336 8765" />
            </LinearLayout>

            <View style="@style/run_order_detail_line" />

            <LinearLayout style="@style/run_order_detail_item">

                <TextView
                    style="@style/run_order_detail_tv_title"
                    android:text="下单时间" />

                <TextView
                    style="@style/run_order_detail_tv_value"
                    android:text="2017-10-28 11:44" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            android:text="取消订单"
            android:textColor="@color/font_color_33"
            android:textSize="15sp" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>