<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="run_order_detail_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="run_order_detail_tv_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/font_color_66</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="run_order_detail_tv_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">7</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/font_color_33</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="run_order_detail_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">#FFE5E5E5</item>
    </style>

</resources>
